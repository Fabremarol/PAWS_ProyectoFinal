  <body class="text-center">
    
<div class="form-signin card col-md-4 col-sm-12 borde-marca">
  <form asp-action="validacion">
    <img class="mb-4" src="~/imagenes/productos/LogoFelectro.png" alt="Logo de la compañía" width="200" height="158">
   

    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
